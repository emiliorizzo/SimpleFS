body, #app
  display flex
  flex-flow column
  align-items center

#app
  width 100%

 #nav
   min-height 3em
   width 100%
   display flex
   flex-flow row nowrap
   align-items center
   justify-content flex-start
   background-color navBg
   width 100%
   .title
     display flex
     font-weight bold
     margin 0 2em
   ul.menu
    list-style none
    margin 0
    display flex
    flex-flow row nowrap
    margin 0 5em 0 auto
    justify-self flex-end
    
    li
      margin 0 .5em
      font-weight bold